<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the user Add page -->
<main class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%= title %></h1>

      <form class="form" method="POST">
        <div class="form-group">
          <label for="nameTextField">Name</label>
          <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Name of user" name="name" value="<%= user.name %>" required>
        </div>

        <div class="form-group">
          <label for="userTelNo">Contact Number</label>
          <input type="tel" class="form-control" id="userTelNo" pattern="[0-9]{10}" placeholder="Enter the contact number of user" name="phone" value="<%= user.phone %>" required>
        </div>

        <div class="form-group">
          <label for="emailTextField">Email Address</label>
          <input type="email" class="form-control" id="emailTextField" placeholder="Enter the email address of user" name="email" value="<%= user.email %>" required>
        </div>

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i> Submit</button>
        
        <a href="/user-list/delete/<%= user._id %>" class="btn btn-danger">
          <i class="fas fa-trash-alt"></i> Delete</a>

        <a href="/user-list" class="btn btn-warning">
          <i class="fas fa-undo"></i> Cancel</a>
      </form>
    </div>

  </div>
</main>


<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>